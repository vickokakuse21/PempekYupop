<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAddNewProductActivity">

    <TextView
        android:id="@+id/header_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="produk YuPop"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:textSize="25dp"
        android:textColor="#000"
        />


    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_product"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/pic_pempek"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/pempek"
            />
        <TextView
            android:id="@+id/text_pempek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pempek"
            android:textColor="#000"
            android:textSize="25dp"
            android:layout_marginBottom="25dp"/>

        <ImageView
            android:id="@+id/pic_tekwan"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/tekwan"
            />
        <TextView
            android:id="@+id/text_tekwan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tekwan"
            android:textColor="#000"
            android:textSize="25dp"
            android:layout_marginBottom="25dp"/>
    </LinearLayout>



</RelativeLayout>